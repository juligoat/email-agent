# LLM
LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here

# Email
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# WHITELIST - Only these emails will be processed:
EMAIL_WHITELIST=your-email@gmail.com,trusted-friend@gmail.com

# Agent Settings
EMAIL_CHECK_INTERVAL=10
CONFIDENCE_THRESHOLD=0.6

# Server
HOST=127.0.0.1
PORT=8000
DEBUG=false